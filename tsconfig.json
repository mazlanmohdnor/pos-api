{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@controller/*": [
        "controller/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"]
}
